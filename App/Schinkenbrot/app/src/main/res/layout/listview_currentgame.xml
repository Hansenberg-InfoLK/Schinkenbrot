<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2">
    <TextView android:id="@+id/currentgame_name" android:layout_column="0" android:layout_row="0" android:text="hi"/>
    <TextView android:id="@+id/currentgame_xp" android:layout_column="1" android:layout_row="0" android:text="xp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_row="1"
        android:layout_column="0"
        android:max="101"/>

    <TextView android:id="@+id/currentgame_timer" android:layout_column="1" android:layout_row="1" android:text="timer"/>
</GridLayout>